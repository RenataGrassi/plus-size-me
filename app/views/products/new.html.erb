
<%# The user can only add a new product if logged in - authorization + navbar %>

<%= simple_form_for(@product) do |form| %>
  <div class="contrainer">
    <div class="row justify-content-center">
      <div class="col-12 col-md-6 col-lg-4">
        <h2 class="text-center mt-2 pb-5 devise-padding">SELL YOUR PRODUCT</h2>
        <div class="row">
          <div class="col">
            <div class="form-inputs">
              <div class="row">
                <div class="col">
                  <div class="pb-3">
                    <%= form.input :name, placeholder: "Black Dress in Silk"%>
                  </div>
                  <div class="pb-3">
                    <%= form.input :description, placeholder: "A perfect dress waiting for the perfect owner" %>
                  </div>
                  <div class="pb-3">
                    <%= form.input :gender, collection: Product::GENDER %>
                  </div>
                  <div class="pb-3">
                    <%= form.input :size, collection: Product::SIZE %>
                  </div>
                  <div class="pb-3">
                    <%= form.input :brand, placeholder: "Zara" %>
                  </div>
                  <div class="pb-3">
                    <%= form.input :category, collection: Product::CATEGORY %>
                  </div>
                  <div class="pb-3">
                    <%= form.input :photo, as: :file, placeholder: "Upload a picture" %>
                  </div>
                  <div class="pb-3">
                    <%= form.input :price %>
                  </div>
                  <div class="pb-5 mb-4">
                    <%= form.submit "Sell it", class: "btn btn-dark btn-block" %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>



