<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="container pt-2">
      <div class="row justify-content-center">
        <div class="col-12 col-md-6 col-lg-3">
          <form action="#">
            <h2 id="" class="text-center mb-5 devise-padding">Log In</h2>
            <div class="row mt-3">
                <div class="form-group">
                  <div class="form-inputs">
                    <%= f.input :email, required: false, autofocus: true, input_html: { autocomplete: "email" }, placeholder: "Enter your email" %>
                  </div>
                </div>
              <div class="row">
                <div class="col">
                  <div class="form-group">
                    <%= f.input :password, required: false, input_html: { autocomplete: "current-password" } %>
                  </div>
                                  <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
                <div class="form-actions">
                  <%= f.button :submit, class: "btn-outline-dark btn-lg w-15 mt-3" %>
                </div>
                </div>
              </div>
            </div>
          </form>
        </div>
      </div>
<% end %>
</div>

  <div class="contrainer pt-2">
    <div class="row justify-content-center">
      <div class="col-12 col-md-6 col-lg-3">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
