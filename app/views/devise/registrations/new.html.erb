<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>
  <div class="contrainer pt-2">
    <div class="row justify-content-center">
      <div class="col-12 col-md-6 col-lg-3">
        <h2 class="text-center mb-5 devise-padding">Create your account</h2>
        <div class="row">
          <div class="col">
            <div class="form-inputs">
              <div class="row">
                <div class="col">
                  <%= f.input :first_name, required: true, placeholder: "First name"%>
                </div>
                <div class="col">
                  <%= f.input :last_name, required: true, placeholder: "Last name"%>
                </div>
              </div>
              <%= f.input :address, required: true, placeholder: "Your address"%>
              <%= f.input :email, required: true, autofocus: true, input_html: { autocomplete: "email" }, placeholder: "Your email"%>
              <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                          input_html: { autocomplete: "new-password" }, placeholder: "Your password" %>
              <%= f.input :password_confirmation, required: true, input_html: { autocomplete: "new-password" }, placeholder: "Confirm your password" %>
            </div>
          </div>
        </div>
        <div class="form-actions">
          <%= f.button :submit, class: "btn-outline-dark btn-lg w-15 mt-3 button-center" %>
        </div>
      </div>
    </div>
  </div>
<% end %>

  <div class="contrainer pt-2">
    <div class="row justify-content-center">
      <div class="col-12 col-md-6 col-lg-3">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>


